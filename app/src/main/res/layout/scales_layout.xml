<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/cbg_11">

    <ImageView
        android:id="@+id/img_monkey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/monkey" />

    <ImageView
        android:id="@+id/img_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/point_gif" />

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_1"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="close"
        android:textColor="@color/color_4"
        android:textSize="20sp" />

    <com.fierce.buerjiates.widget.DashboardView
        android:id="@+id/dashboard_view_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_reader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="读取数据" />

    <TextView
        android:id="@+id/tv_readerB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_reader"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="读取zuk数据" />

    <TextView
        android:id="@+id/tv_readerZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_readerB"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="置零" />

    <TextView
        android:id="@+id/tv_readerBD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_readerZ"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="标定" />
</RelativeLayout>