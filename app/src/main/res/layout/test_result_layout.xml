<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/cbg_22">


    <ImageView
        android:id="@+id/cloud_2"
        android:layout_width="340dp"
        android:layout_height="300dp"
        android:background="@mipmap/cloud_2" />

    <ImageView
        android:id="@+id/img_sun"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/sun" />

    <ImageView
        android:id="@+id/cloud_3"
        android:layout_width="250dp"
        android:layout_height="230dp"
        android:layout_below="@id/cloud_2"
        android:layout_marginTop="80dp"
        android:background="@mipmap/cloud_3" />


    <ImageView
        android:id="@+id/cloud_1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@id/cloud_3"
        android:src="@mipmap/cloud_1" />

    <ImageView
        android:id="@+id/img_monkey1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/monkey_gif"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/img_ewm_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ewm_bg" />

    <ImageView
        android:id="@+id/img_ewm"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="553dp"
        android:layout_marginEnd="245dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />


</RelativeLayout>